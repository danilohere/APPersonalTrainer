<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUltTreino"
        android:id="@+id/txtData"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_texto"
        android:textSize="@dimen/texto_campos"
        android:layout_toEndOf="@+id/txtNome"
        android:textAlignment="center"
        android:layout_marginEnd="5dp" />

    <TextView
        android:text="@string/ltima_vez_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUltTreino"
        android:textColor="@color/color_texto"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtNome"
        android:padding="@dimen/padding_caixa_texto"
        android:textAlignment="center"
        android:layout_marginEnd="5dp" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/txtNome"
        android:textSize="20sp"
        android:textColor="@color/color_texto"
        android:padding="@dimen/padding_caixa_texto"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_width="220dp" />

</RelativeLayout>